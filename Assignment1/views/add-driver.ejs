<html>
<head>
    <link href="/bootstrap.min.css" rel="stylesheet" />
    <style>
        .container-fluid {
            width: 100%;
            height: 280px; /* Set a fixed height for the card */
        }

        .row.justify-content-center {
            height: 300px;
        }

        .card{
            height: 340px;
            width:auto
        }

    </style>
</head>
<body>
    <%- include('partials/header') %>
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-sm-8 col-md-6 col-lg-4 g-2">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <form method="POST" action="/33520496/Yang/drivers/add-driver">
                                    <div class="mb-2">
                                        <label for="name" class="form-label">Name</label>
                                        <input type="text" name="name" class="form-control" id="name" placeholder="Enter your name" />
                                    </div>
                                    <div class="mb-2">
                                        <label for="department" class="form-label">Department</label>
                                        <input type="text" name="department" class="form-control" id="department" value="Food" />
                                    </div>
                                    <div class="mb-2">
                                        <label for="license" class="form-label">License</label>
                                        <input type="text" name="license" class="form-control" id="license" placeholder="Enter driver license" />
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="1" id="isActive" name="isActive">
                                        <label class="form-check-label" for="isActive">Is Active?</label>
                                    </div>
                                    <h5>             </h5>
                                    <button class="btn btn-primary">Submit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    <%- include('partials/footer') %> 
</body>
</html>
